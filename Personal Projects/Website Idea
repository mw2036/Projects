    <body>
        <div id="header">
            <button class="sideBtn" id="more" onclick="openMore()"><i class="fa fa-bars"></i></button>
            <button class="sideBtn" id="search"><i class="fa fa-search"></i></button>
            <button class="sideBtn" id="settings" ><i class="fa fa-cog"></i></button>
