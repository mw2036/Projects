        <div id="background1">
            <h1 id="h1">Innovate Today</h1>
            <h2 id="h2">Rest Tomorrow</h2>
            <button id="innovate">Innovate</button>
        </div>




        <script>
            
            const header = document.getElementById("header");

            let isMenuOpen = false;

            function openMore() {
                if (isMenuOpen == false) {
                    header.animate
                    (
                        {
                            width: ["", "7%"],
                            backgroundColor: ["", "rgb(34, 34, 34)"],
                        },
                        {duration: 100, fill: "forwards"}
                    );
                    search.animate
                    (
                        {
                            opacity: ["0", "1"],
                        },
                        {duration: 100, fill: "forwards"}
                    );
                    settings.animate
                    (
                        {
                            opacity: ["0", "1"],
                        },
                        {duration: 100, fill: "forwards"}
                    );
                    setTimeout(function(){
                        
                        more.innerHTML = '<i class="fa fa-bars"></i> Menu';
                        search.innerHTML = '<i class="fa fa-search"></i> Search';
                        settings.innerHTML = '<i class="fa fa-cog"></i> Settings';
                    }, 80);
                    isMenuOpen = true;
                }
                else {
                    header.animate
                    (
                        {
                            width: ["", "3%"],
                            backgroundColor: ["", "black"],
                        },
                        {duration: 100, fill: "forwards"}
				    );
                    search.animate
                    (
                        {
                            opacity: ["1", "0"],
                        },
                        {duration: 100, fill: "forwards"}
                    );
                    settings.animate
                    (
                        {
                            opacity: ["1", "0"],
                        },
                        {duration: 100, fill: "forwards"}
                    );
                    more.innerHTML = '<i class="fa fa-bars"></i>';
                    search.innerHTML = '<i class="fa fa-search"></i>';
                    settings.innerHTML = '<i class="fa fa-cog"></i>';
                    isMenuOpen = false;
                }
            };


            setTimeout(function(){
            (function startup() {
                h1.animate
                    (
                        {
                            top: ["24%", "20%"],
                            opacity: ["", "1"],
                        },
                        {duration: 2000, fill: "forwards"}
                    );
                setTimeout(function(){
                    h2.animate
                    (
                        {
                            top: ["17%", "13%"],
                            opacity: ["", "1"],
                        },
                        {duration: 2000, fill: "forwards"}
                    );
                    setTimeout(function(){
                    innovate.animate
                    (
                        {
                            top: ["17%", "13%"],
                            opacity: ["", "1"],
                        },
                        {duration: 2000, fill: "forwards"}
                    );
                    }, 3500);
                }, 3000);
            }());
            }, 600);

        </script>
